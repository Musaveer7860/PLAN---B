class Solution:
    def numberOfLines(self, widths: List[int], s: str) -> List[int]:
        lines = 1
        currwidth = 0
        for ch in s:
            index = ord(ch) - ord("a")
            w = widths[index]
            if currwidth + w > 100:
                lines += 1
                currwidth = w
            else:
                currwidth+=w
        
        result = [lines,currwidth]
        return result

